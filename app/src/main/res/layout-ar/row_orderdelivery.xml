<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlQtyNo">
                <TextView
                    android:id="@+id/tvTitleOrderNumber"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:text=": ORDER ID "
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvOrderNumber"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toLeftOf="@id/tvTitleOrderNumber"
                    android:text="S7KQ0F92LO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvDate"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="17-05-2020"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlQtyNo"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/rlQty">
                <TextView
                    android:id="@+id/tvQty"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:text=":  QTY"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvQtyNumber"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/tvQty"
                    android:text="S7KQ0F92LO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvPaymentType"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:text="COD"
                    android:paddingRight="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlQty"
                android:layout_marginTop="@dimen/_5sdp"
               >
                <TextView
                    android:id="@+id/tvDelivery"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:text=": STATUS"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvOrderStatus"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/tvDelivery"
                    android:text="test"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvPrice"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:text="$80"
                    android:paddingRight="@dimen/_5sdp"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>